{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gestion des équipes {% endblock %}

{%block contenu %}

    {% if form.valide is defined %} 
        {% if form.valide == true %}
            <h1 class="alert alert-succes" role="alert">{{ form.message }}</h1> 
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=consultation_projet&id={{form.projet.id}}">Retourner sur la page du projet</a></h1>
        {% else %} 
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=consultation_projet&id={{form.projet.id}}">Retourner sur la page d'inscription</a></h1>
        {% endif %}     

    {% else %} 
        <form class="form-signin" action="index.php?page=ajout-tacheProjet&id={{form.projet.id}}" method="post" enctype="application/x-www-form-urlencoded">
            <h1 class="h3 mb-3 font-weight-normal">Ajouter une tache</h1>


            <label for="nom" class="sr-only">Libellé:</label>
            <input type="text" id="libelle" name="libelle" class="form-control" placeholder="Libelle" required>   
            <label for="nom" class="sr-only">NbHeureTache:</label>
            <input type="text" id="nbHeureTache" name="nbHeureTache" class="form-control" placeholder="Nombre d'heure de la tâche" required> 
            
            <button class="btn btn-lg  btn-block" type="submit" name="btAjouterTache">Ajouter</button>    
            
            <a href="index.php?page=consultation_projet&id={{form.projet.id}}">Retourner au projet</a>
        </form>

    {%endif%}

{%endblock%}