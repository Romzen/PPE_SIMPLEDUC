{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Modifier un utilisateur {% endblock %}

{% block contenu %} 

    <form class="form-signin" action="index.php?page=ajout-outil-utilisateur" method="post" enctype="application/x-www-form-urlencoded">
        <h1 class="h3 mb-3 font-weight-normal">Ajouter un outil a un utilisateur</h1>

        <select class="form-control" name="id_dev">
            {%for u in form.utilisateur%}
                <option value="{{ u.id }}">{{ u.nom }}</option>
            {% endfor %}   
        </select>
        
        <select class="form-control" name="id_outil">
            {%for o in form.outil%}
                <option value="{{ o.id }}">{{ o.libelle }}</option>
            {% endfor %}   
        </select>

        <button class="btn btn-lg  btn-block" type="submit" name="btAjouter">Ajouter</button>

    </form>

{%endblock%}